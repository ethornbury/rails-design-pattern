    <%= f.label :lastname %><br>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :manufacturer %><br>
    <%= f.text_field :manufacturer %>
  </div>
  <div class="field">
    <%= f.label :cost %><br>
    <%= f.text_field :cost %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </div>
  <div class="field">
  Electric windows:
  <%= check_box_tag 'car[windows]', 'windows' %>
  </div>
  <div class="field">
  Anti glare rear view mirror:
  <%= check_box_tag 'car[mirror]', 'mirror' %>
  </div>
  <div class="field">
  Parking sensor:
  <%= check_box_tag 'car[psensor]', 'psensor' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
