<h1>Listing cars</h1>
 
<p id="notice"><%= notice %></p>


<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Manufacturer</th>
      <th>Cost</th>
      <th>Description</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.firstname %></td>
        <td><%= car.lastname %></td>
        <td><%= car.manufacturer %></td>
        <td><%= car.cost %></td>
        <td><%= car.description %></td>
        <td><%= car.color %></td>
        <td><%= link_to 'Show', car %></td>
        <% if current_user.admin? %>
          <td><%= link_to 'Edit', edit_car_path(car) %></td>
          <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<!-- another way to restrict access to only signed users -->


<%# if user_signed_in? %> 
  <%= link_to 'New Car', new_car_path %>
<%# end %>